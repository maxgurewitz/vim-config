set number
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set guifont=Monaco:h16
set splitbelow
set splitright
set laststatus=2
set guioptions-=e
execute pathogen#infect()
syntax on
set background=dark
let g:solarized_termcolors=256
colorscheme solarized
filetype plugin indent on
let NERDTreeShowHidden=1
let NERDTreeIgnore = ['\.swp$', '\.swo$', '\.DS_Store$']
