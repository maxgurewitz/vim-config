set number
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set guifont=Monaco:h16
set splitbelow
set splitright
set laststatus=2
set guioptions-=e
execute pathogen#infect()
syntax on
set background=dark
let g:solarized_termcolors=256
colorscheme solarized
filetype plugin indent on
let NERDTreeShowHidden=1
